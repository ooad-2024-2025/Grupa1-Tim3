@page
@model RegisterModel

@{
    ViewData["Title"] = "Registracija";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow-sm" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <div class="text-center mb-4">
                <h2 class="card-title">Nutritionist</h2>
                <h4 class="card-subtitle text-muted">Registracija</h4>
            </div>

            <form asp-route-returnUrl="@Model.ReturnUrl"
                  method="post"
                  class="needs-validation"
                  novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName"
                           class="form-control"
                           autocomplete="given-name"
                           placeholder="Ime"
                           required />
                    <label asp-for="Input.FirstName">Ime</label>
                    <div class="invalid-feedback">Unesite ime.</div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName"
                           class="form-control"
                           autocomplete="family-name"
                           placeholder="Prezime"
                           required />
                    <label asp-for="Input.LastName">Prezime</label>
                    <div class="invalid-feedback">Unesite prezime.</div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.UserName"
                           class="form-control"
                           autocomplete="username"
                           placeholder="Korisničko ime"
                           required />
                    <label asp-for="Input.UserName">Korisničko ime</label>
                    <div class="invalid-feedback">Unesite korisničko ime.</div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber"
                           class="form-control"
                           type="tel"
                           placeholder="Broj telefona"
                           required />
                    <label asp-for="Input.PhoneNumber">Telefon</label>
                    <div class="invalid-feedback">Unesite broj telefona.</div>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="Input.Gender"
                            class="form-select"
                            required>
                        <option value="">Odaberite spol</option>
                        <option value="Musko">Muški</option>
                        <option value="Zensko">Ženski</option>
                        <option value="Ostalo">Ostalo</option>
                    </select>
                    <label asp-for="Input.Gender">Spol</label>
                    <div class="invalid-feedback">Odaberite spol.</div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Birthday"
                           class="form-control"
                           type="date"
                           placeholder="Datum rođenja"
                           required />
                    <label asp-for="Input.Birthday">Datum rođenja</label>
                    <div class="invalid-feedback">Unesite datum rođenja.</div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email"
                           class="form-control"
                           autocomplete="username"
                           placeholder="name@example.com"
                           required />
                    <label asp-for="Input.Email">Email</label>
                    <div class="invalid-feedback">Unesite ispravnu email adresu.</div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password"
                           type="password"
                           class="form-control"
                           autocomplete="new-password"
                           placeholder="Lozinka"
                           required />
                    <label asp-for="Input.Password">Lozinka</label>
                    <div class="invalid-feedback">Unesite lozinku.</div>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword"
                           type="password"
                           class="form-control"
                           autocomplete="new-password"
                           placeholder="Potvrdite lozinku"
                           required />
                    <label asp-for="Input.ConfirmPassword">Potvrda lozinke</label>
                    <div class="invalid-feedback">Potvrdite lozinku.</div>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3">
                    Registriraj se
                </button>

                <div class="text-center">
                    <p class="mb-1">
                        Već imate račun?
                        <a asp-page="./Login">Prijavite se</a>
                    </p>
               @*      <p>
                        <a asp-page="./ForgotPassword">Zaboravljena lozinka?</a>
                    </p> *@
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Bootstrap client-side validation
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.forEach.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}