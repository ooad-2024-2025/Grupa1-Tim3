@page
@model LoginModel

@{
    ViewData["Title"] = "Prijavi se";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow-sm" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <div class="text-center mb-4">
                <h2 class="card-title">Nutritionist</h2>
                <h4 class="card-subtitle text-muted">Prijava</h4>
            </div>

            <form method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email"
                           class="form-control"
                           autocomplete="username"
                           placeholder="name@example.com"
                           required />
                    <label asp-for="Input.Email">Email</label>
                    <div class="invalid-feedback">
                        Unesite vašu email adresu.
                    </div>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.Password"
                           type="password"
                           class="form-control"
                           autocomplete="current-password"
                           placeholder="Lozinka"
                           required />
                    <label asp-for="Input.Password">Lozinka</label>
                    <div class="invalid-feedback">
                        Unesite vašu lozinku.
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3">
                    Prijavi se
                </button>

                <div class="text-center">
                    <p class="mb-1">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrirajte se</a>
                    </p>
                    @* <p>
                        <a asp-page="./ForgotPassword">Zaboravljena lozinka?</a>
                    </p> *@
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Bootstrap client-side validation
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.forEach.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}