@model Nutritionist.Models.User

@{
    ViewData["Title"] = "Obriši korisnika";
}

<div class="text-center mt-5 mb-4">
    <h1 class="display-4">Obriši korisnika</h1>
    <h5 class="text-muted">
        Jeste li sigurni da želite obrisati korisnika
        <strong>@Model.FirstName @Model.LastName</strong>?
    </h5>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-3 mb-4 shadow-sm">
            <dl class="row mb-4">
                <dt class="col-sm-4">Ime</dt>
                <dd class="col-sm-8">@Model.FirstName</dd>

                <dt class="col-sm-4">Prezime</dt>
                <dd class="col-sm-8">@Model.LastName</dd>

                <dt class="col-sm-4">Korisničko ime</dt>
                <dd class="col-sm-8">@Model.UserName</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                @if (Model.Birthday.HasValue)
                {
                    <dt class="col-sm-4">Rođendan</dt>
                    <dd class="col-sm-8">@Model.Birthday.Value.ToString("dd.MM.yyyy")</dd>
                }

                <dt class="col-sm-4">Pretplata na newsletter</dt>
                <dd class="col-sm-8">
                    @(Model.IsSubscribedToNewsletter ? "Da" : "Ne")
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    Obriši
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    Odustani
                </a>
            </form>
        </div>
    </div>
</div>