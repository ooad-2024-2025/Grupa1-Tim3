@model Nutritionist.Models.User

@{
    ViewData["Title"] = "Detalji korisnika";
}

<div class="text-center mt-5 mb-4">
    <h1 class="display-4">@Model.FirstName @Model.LastName</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <dl class="row mb-4">
                    <dt class="col-sm-4">Ime</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>

                    <dt class="col-sm-4">Prezime</dt>
                    <dd class="col-sm-8">@Model.LastName</dd>

                    <dt class="col-sm-4">Korisničko ime</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Telefon</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4">Spol</dt>
                    <dd class="col-sm-8">@Model.Gender</dd>

                    <dt class="col-sm-4">Rođendan</dt>
                    <dd class="col-sm-8">
                        @(Model.Birthday?.ToString("dd-MM-yyyy") ?? "-")
                    </dd>

                    <dt class="col-sm-4">Pretplata na newsletter</dt>
                    <dd class="col-sm-8">
                        @(Model.IsSubscribedToNewsletter ? "Da" : "Ne")
                    </dd>

                    <dt class="col-sm-4">Datum kreiranja</dt>
                    <dd class="col-sm-8">
                        @Model.CreatedAt.ToString("dd-MM-yyyy")
                    </dd>
                </dl>

                <div class="d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@Model.Id"
                       class="btn btn-sm btn-warning">
                        Uredi
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-secondary">
                        Natrag na popis
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>