@model Nutritionist.Models.Recipe

@{
    ViewData["Title"] = "Obriši recept";
}

<div class="text-center mt-5 mb-4">
    <h1 class="display-4">Obriši recept</h1>
    <h5 class="text-muted">
        Jeste li sigurni da želite obrisati recept
        <strong>“@Model.Title”</strong>?
    </h5>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-3 mb-4 shadow-sm">
            <dl class="row mb-4">
                <dt class="col-sm-4">Naslov</dt>
                <dd class="col-sm-8">@Model.Title</dd>

                <dt class="col-sm-4">Tip</dt>
                <dd class="col-sm-8">@Model.Type</dd>

                <dt class="col-sm-4">Vrijeme pripreme</dt>
                <dd class="col-sm-8">@Model.TimeToMake</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    Obriši
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    Odustani
                </a>
            </form>
        </div>
    </div>
</div>