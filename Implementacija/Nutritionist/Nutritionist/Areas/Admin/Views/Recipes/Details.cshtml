@model Nutritionist.Models.Recipe

@{
    ViewData["Title"] = Model.Title;
}

<div class="text-center mt-5 mb-4">
    <h1 class="display-4">@Model.Title</h1>
    <p class="text-muted">
        @Model.CreatedAt.ToString("dd-MM-yyyy")
    </p>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl"
                     class="card-img-top"
                     alt="@Model.Title" />
            }
            <div class="card-body">
                <h5 class="card-title">Opis</h5>
                <p class="card-text">@Model.Description</p>

                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item">
                        <strong>Tip:</strong> @Model.Type
                    </li>
                    <li class="list-group-item">
                        <strong>Vrijeme pripreme:</strong> @Model.TimeToMake
                    </li>
                    <li class="list-group-item">
                        <strong>Sastojci:</strong> @Model.Ingredients
                    </li>
                    <li class="list-group-item">
                        <strong>Autor:</strong> @Model.User.UserName
                    </li>
                </ul>

                <div class="d-flex justify-content-between">
                    <a asp-action="Edit"
                       asp-route-id="@Model.Id"
                       class="btn btn-sm btn-warning">
                        Uredi
                    </a>
                    <a asp-action="Index"
                       class="btn btn-sm btn-secondary">
                        Natrag na Recepti
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>