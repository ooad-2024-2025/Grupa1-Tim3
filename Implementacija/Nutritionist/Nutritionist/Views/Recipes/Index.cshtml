@using Nutritionist.Models
@model Nutritionist.ViewModels.RecipeListViewModel

<div class="text-center mt-5 mb-4">
    <h1 class="display-4">Recepti</h1>
</div>

<ul class="nav nav-pills justify-content-center mb-4">
    <li class="nav-item">
        <a class="nav-link @(Model.SelectedType == null ? "active" : "")"
           asp-action="Index">Svi</a>
    </li>
    @foreach (var t in Model.RecipeTypes)
    {
        <li class="nav-item">
            <a class="nav-link @(Model.SelectedType == t ? "active" : "")"
               asp-action="Index" asp-route-type="@t">@t</a>
        </li>
    }
</ul>

<div class="row">
    @foreach (var r in Model.Recipes)
    {
        <div class="col-sm-6 col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(r.ImageUrl))
                {
                    <img src="@r.ImageUrl"
                         class="recipe-thumb"
                         alt="@r.Title" />
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@r.Title</h5>
                    <div class="mb-2">
                        <span class="badge bg-secondary">@r.Type</span>
                        <small class="text-muted ms-2">
                            <i class="bi bi-clock"></i> @r.TimeToMake
                        </small>
                    </div>
                    <a asp-action="Details"
                       asp-route-id="@r.Id"
                       class="btn btn-sm btn-outline-primary mt-auto">
                        Pogledaj
                    </a>
                </div>
            </div>
        </div>
    }
</div>